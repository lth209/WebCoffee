    var productTypes = ViewData["producttypes"] as List<Loaisanpham>;
    var bestsellers = ViewData["bestsellers"] as List<Sanpham>;
    
    String getTenLoai(int maloai)
    {
        switch (maloai)
        {
            case 1:
                return "caphe";
            case 2:
                return "tea";
            case 3:
                return "daxay";
            case 4:
                return "sinhto";
            case 5:
                return "snack";
            default:
                return "";
        }
    }
}


