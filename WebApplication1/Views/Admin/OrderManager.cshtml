
@{
    ViewData["Title"] = "CustomerManager";
    List<Donhang> orders = ViewData["orders"] as List<Donhang>;
}

<!-- Header-->

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="../#">Dashboard</a></li>
                    <li><a href="../#">Table</a></li>
                    <li class="active">Data table</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data Table</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Mã khách hàng</th>
                                    <th>Tổng tiền</th>
                                    <th>Ngày đặt</th>
                                    <th>Tình trạng</th>
                                    <th>Chi tiết</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var od in orders)
                                {
                                <tr>
                                    <td>@od.Madh</td>
                                    <td>@od.Makh</td>
                                    <td>@od.Tongtien</td>
                                    <td>@od.Ngaydat</td>
                                    @switch (od.Tttt)
                                    {
                                        case 1:
                                            <td><button class="btn btn-success">Đã thanh toán</button></td>
                                            break;
                                        case 2:
                                            <td><button class="btn btn-primary">Đang chuẩn bị</button></td>
                                            break;
                                        case 3:
                                            <td><button class="btn btn-warning">Đang giao hàng</button></td>
                                            break;
                                        default:
                                            <td><button class="btn btn-danger">Đang xử lý</button></td>
                                            break;
                                    }
                                    <td>
                                        <form asp-controller="Admin" asp-action="OrderDetail" asp-route-id="@od.Madh" method="post">
                                            <button class="btn btn-outline-success">
                                                <i class="fa fa-edit"></i> Detail
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                 }

                                    

                                </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->

