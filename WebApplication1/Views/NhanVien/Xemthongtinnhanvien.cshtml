@{ Layout = "_AdminLayout"; }
@model WebApplication1.Models.Khachhang;
<link href="~/css/styleXemThongTinNhanVien.css" rel="stylesheet" />
<div class="container mb-5 parent">
    <div>
        <h2 style="color:red">Thông tin tài khoản</h2>
    </div>
    <form asp-controller="NhanVien" asp-action="XemThongTinNhanVien" method="POST">
        @foreach (var item in ViewBag.tk as List<Users>)
        {
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="HoTen">1. Họ tên</label>
                    <input type="text" class="form-control" id="HoTen" placeholder="Nhập họ tên" name="Hoten" value='@Html.DisplayFor(itemModel => item.Tentk)' autocomplete="off" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="Email">2. Email</label>
                    <input type="email" class="form-control" id="Email" placeholder="Nhập Email" name="Email" value='@Html.DisplayFor(itemModel => item.Email)' autocomplete="off" required>
                </div>
            </div>

           }
        @if (ViewBag.success != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.success
            </div>
        }
        <input type="submit" class="btn-submit" value="&nbsp; Cập nhật">
        <i class="far fa-pencil-alt icon"></i>
    </form>

</div>
<script>
$(document).ready(function(){
			$('input[type=checkbox]').change(function(){
				if ($(this).is(":checked")) {
					$('#oldpassword').removeAttr('disabled');
					$('#newPass').removeAttr('disabled');
				}
				else{
					$('#oldpassword').attr('disabled','');
					$('#newPass').attr('disabled','');
				}
			});
		});</script>