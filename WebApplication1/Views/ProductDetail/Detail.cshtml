<!-- Related Product Section Begin -->
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>Sản phẩm liên quan</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @{
                int i = 0;
                foreach (var product in products)
                {
                    if (i > 3) return;
                    if (product.Maloaisp == Model.Maloaisp && product.Masp != Model.Masp)
                    {
                        i++;
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="../img/product/@product.Hinhanh">
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li>
                                            <a asp-controller="ProductDetail"
                                               asp-action="Detail"
                                               asp-route-id="@product.Masp"><i class="fa fa-info"></i></a>
                                        </li>
                                        <li><a href="#"><i class="fa fa-shopping-cart" data-id="@product.Masp"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6>
                                        <a asp-controller="ProductDetail"
                                           asp-action="Detail"
                                           asp-route-id="@product.Masp">@product.Tensp</a>
                                    </h6>
                                    <h5>@product.Gia</h5>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
            </div>
    </div>
</section>
